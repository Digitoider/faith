<div class="row">
  <div class="col s12">
    <div class="card grey lighten-5">
      <div class="card-content ">
        <span class="card-title">Profile</span>

        <div class="row">
          <div class="col s4">
            <div class="card">
              <div class="card-image">
                <%= image_tag 'profile_noimage.jpg' %>
              </div>
              <div class="card-content s12">
                <%= link_to 'Edit profile', edit_profile_registration_path, { class: "waves-effect waves-light btn-small" } %>
              </div>
            </div>
          </div>
          <div class="col s8">
            <blockquote>
              <h6>Name: <%= current_profile.name %></h6>
              <h6>Surname: <%= current_profile.surname %></h6>
              <h6>Middle name: <%= current_profile.middlename %></h6>
              <h6>Age: <%= current_profile.age %></h6>
            </blockquote>
            <h6>Role: <%= current_profile.role %></h6>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>