<div class="row">
  <div class="col s12">
    <div class="card grey lighten-5">
      <div class="card-content ">
        <span class="card-title">Add analysis</span>


        <div class="row">
          <div class="input-field col s6">
            <%= form_for :analysis do |f| %>

              <div class="input-field col s12">
                <%= f.select :profile, [], {}, {class: 'profile-select2'} %>
              </div>

              <div class="input-field col s12">
                <%= f.label :analysis_text, 'Analysis' %>
                <%= f.text_area :analysis_text, {class: 'materialize-textarea'} %>
              </div>

              <div class="input-field col s12">
                <%= f.label :date, 'Recieved analysis at' %>
                <%= f.text_field :date, {class: 'datepicker'} %>
              </div>

              <div class="switch col s12">
                <span>Operation required? </span>
                <label class="">
<!--                  No-->
                  <input type="checkbox">
                  <span class="lever"></span>
<!--                  Yes-->
                </label>
              </div>

              <div class="input-field col s6">
                <%= f.label :min_duration, 'Min duration' %>
                <%= f.text_field :min_duration %>
              </div>

              <div class="input-field col s6">
                <%= f.label :max_duration, 'Max duration' %>
                <%= f.text_field :max_duration %>
              </div>

              <div class="col s12">
                <%= f.submit "Add Analysis", class: "waves-effect waves-light btn" %>
              </div>
            <% end %>

